@model IEnumerable<HealthEquityApp.Model.Car>

@{
    ViewData["Title"] = "HealthEquityApp - Home Page";
}

@if (Model != null)
{
    <table class="table table-striped table-hover">
        <caption>Car list</caption>
        <thead>
            <tr>
                <th scope="col">
                    Id
                </th>
                <th scope="col">
                    Make
                </th>
                <th scope="col">
                    Model
                </th>
                <th scope="col">
                    Year
                </th>
                <th scope="col">
                    Doors
                </th>
                <th scope="col">
                    Color
                </th>
                <th scope="col">
                    Price
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <th scope="row">
                        @car.Id
                    </th>
                    <td id="carmake_@car.Id">
                        @car.Make
                    </td>
                    <td id="carmodel_@car.Id">
                        @car.Model
                    </td>
                    <td id="caryear_@car.Id">
                        @car.Year
                    </td>
                    <td>
                        @car.Doors
                    </td>
                    <td>
                        @car.Color
                    </td>
                    <td>
                        <div class="input-group">
                            <div class="input-group-text">$</div>
                            <input class="form-control" type="number" id="input_@car.Id" maxlength="9" placeholder="Try to guess the car price" />
                            <button class="btn btn-primary btn_guess" id="btn_@car.Id">OK</button>
                        </div>                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


<div class="modal" tabindex="-1" id="modal_success">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">

                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3 class="text-success">Good job.</h3>
                <p>Your guess value of <strong class="guess-value"></strong> is within 10,000 price range for this car/model/year.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" id="modal_fail">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3 class="text-danger">Ops, not this time.</h3>
                <p>Change the guess value of <strong class="guess-value"></strong> for this car/model/year and try again.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



